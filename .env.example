# Configuración del Frontend - Jeremy Fitness Platform

# API Backend URL
REACT_APP_API_URL=http://localhost:5000/api

# Entorno
REACT_APP_ENV=development

# Configuración de Mercado Pago (para pagos)
REACT_APP_MP_PUBLIC_KEY=your_mp_public_key_here

# Configuración de Analytics (opcional)
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Configuración de Sentry (opcional, para error tracking)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Configuración de Socket.io (para chat en vivo)
REACT_APP_SOCKET_URL=http://localhost:5000

# Configuración de archivos
REACT_APP_MAX_FILE_SIZE=500000000
REACT_APP_ALLOWED_FILE_TYPES=video/mp4,video/webm,image/jpeg,image/png,image/gif

# Configuración de PWA
REACT_APP_PWA_ENABLED=true
REACT_APP_SITE_NAME=Jeremy Fitness Pro
REACT_APP_SITE_DESCRIPTION=Plataforma exclusiva de fitness con contenido premium
REACT_APP_SITE_URL=https://jeremyfitness.com